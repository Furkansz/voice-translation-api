{
  "name": "universal-voice-translation-api",
  "version": "1.0.0",
  "description": "Universal Voice Translation Platform with API for call centers, telemedicine, and cross-language communication",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run api\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "api": "nodemon api/server.js",
    "api-only": "node api/server.js",
    "start": "node start-api.js",
    "start:production": "NODE_ENV=production node start-api.js",
    "build": "cd client && npm run build",
    "test": "jest",
    "test:api": "jest --testPathPattern=api",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "voice",
    "translation",
    "api",
    "real-time",
    "speech-to-text",
    "text-to-speech",
    "multilingual",
    "call-center",
    "telemedicine",
    "universal-communication"
  ],
  "author": "Voice Translation Team",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/speech": "^7.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "socket.io": "^4.7.4",
    "ws": "^8.14.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "crypto": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/universal-voice-translation"
  },
  "bugs": {
    "url": "https://github.com/your-org/universal-voice-translation/issues"
  },
  "homepage": "https://github.com/your-org/universal-voice-translation#readme"
}